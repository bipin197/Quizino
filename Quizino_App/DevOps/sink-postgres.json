{
    "name": "postgres-sink-connector",
    "config": {
      "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
      "tasks.max": "1",
      "topics": "source-db.public.<table-name>",
      "connection.url": "jdbc:postgresql://<target-postgres-host>:5432/<target-database-name>",
      "connection.user": "<target-postgres-user>",
      "connection.password": "<target-postgres-password>",
      "auto.create": "true",
      "insert.mode": "upsert",
      "pk.fields": "id",
      "pk.mode": "record_key"
    }
  }  